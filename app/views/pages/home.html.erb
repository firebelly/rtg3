<%= content_for :title, raw(@page.title_override.blank? ? @page.title : @page.title_override) %>

<%= content_for :edit_link do %>
  <%= render :partial => '/shared/edit_bug', :locals => { :obj => @page, :edit_path => rails_admin.edit_path(model_name: 'page', id: @page.id) }%>
<% end %>

<%= content_for :featured do %>
<div class="wrap slider-wrap">
  <div class="feature-slider">
    <div class="feature intro-slide">      
      <div class="feature-image" style="background-image:url('<%= image_url('RTG_Feature.jpg') %>');background-size:cover;">
      </div>
      <div class="feature-content-wrap">
        <div class="feature-content">
          <% if @page.banner_title.blank? %>
            <h2>What is your reason?</h2>
          <% else %>
            <h2><%=raw @page.banner_title.gsub("\n","<br>") %></h2>
          <% end %>
          <div class="description"><p>Meaningful donations<br> Transforming lives<br> Empowering communities</p></div>
          <a href="#" class="video-toggle"><svg class="icon icon-play" role="img"><use xlink:href="#icon-play"></use></svg></a>
        </div>
      </div>
    </div>
    <%= render @reasons %>
    <div class="feature-video">
      <div class="feature-video-background"></div>
      <div class="feature-video-wrap">
        <iframe type="text/html" id="video" width="100%" height="100%" src="https://www.youtube.com/embed/36J-C0TM93w?version=3&enablejsapi=1&modestbranding=1&showinfo=0&autohide=1" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  <a data-scroll href="#content" class="scroll-down">
    <svg class="icon icon-arrow" role="img"><use xlink:href="#icon-arrow"></use></svg>
    <span class="x -white"></span>
  </a>
</div>
<% end %>

<div class="blocks intro">
  <div class="block -left -gray">
    <div class="block-content">
      <%= raw @page.content %>
    </div>
  </div>
  <div class="block -right -column -pink support-us">
    <div class="block-content -top-half -center">
      <p><strong>Why not support what we do<br> by giving whatever you can:</strong></p>
      <%= render partial: "/shared/donation_form" -%>
    </div>
    <div class="block-content -bottom-half -image-cover -center">
    </div>
  </div>
</div>

<div class="blocks ways-to-get-involved">
  <div class="block -left -pink -callout">
    <div class="block-content">
      <h3>7 Ways To Get Involved</h3>
      <h4>Find Your Reason To Give.</h4>
    </div>
  </div>
  <div class="block -right -gray block-list related-block">
    <div class="block-content">
      <ol>
        <li>
          <a href="give" class="list-item">
            <div class="list-wrap">
              <div class="list-number">1</div>
              <div class="list-text">
                <h4>Find Your Reason to Give</h4>
                <p>Sponsor a Student and help them achieve their dreams.</p>  
              </div>
              <div class="list-icon"><div class="plus-arrow"></div></div>
            </div>
          </a>
        </li>
        <li>
          <a href="get-involved" class="list-item">
            <div class="list-wrap">
              <div class="list-number">2</div>
              <div class="list-text">
                <h4>Teach A Class</h4>
                <p>Pass along your experience and expertise with students.</p>  
              </div>
              <div class="list-icon"><div class="plus-arrow"></div></div>
            </div>
          </a>
        </li>
        <li>
          <a href="get-involved" class="list-item">
            <div class="list-wrap">
              <div class="list-number">3</div>
              <div class="list-text">
                <h4>Mentor A Student</h4>
                <p>Guide and support a student on their path to success.</p>  
              </div>
              <div class="list-icon"><div class="plus-arrow"></div></div>
            </div>
          </a>
        </li>
        <li>
          <a href="get-involved" class="list-item">
            <div class="list-wrap">
              <div class="list-number">4</div>
              <div class="list-text">
                <h4>Become A Partner</h4>
                <p>Contribute your resources to make an impact in the community.</p>  
              </div>
              <div class="list-icon"><div class="plus-arrow"></div></div>
            </div>
          </a>
        </li>
        <li>
          <a href="apply" class="list-item">
            <div class="list-wrap">
              <div class="list-number">5</div>
              <div class="list-text">
                <h4>Join Our Program</h4>
                <p>Apply to the program or refer someone in need.</p>  
              </div>
              <div class="list-icon"><div class="plus-arrow"></div></div>
            </div>
          </a>
        </li>
        <li>
          <a href="get-involved" class="list-item">
            <div class="list-wrap">
              <div class="list-number">6</div>
              <div class="list-text">
                <h4>Volunteer Or Intern</h4>
                <p>Give your talents and time to our programs, events, and childcare.</p>  
              </div>
              <div class="list-icon"><div class="plus-arrow"></div></div>
            </div>
          </a>
        </li>
        <li class="list-item-form last-item">
          <div class="list-item">
            <div class="list-wrap">
              <div class="list-number">7</div>
              <div class="list-text">
                <h4>Follow Our<br> Newsletter</h4> 
              </div>
              <div class="form">
                <%= render partial: "/shared/newsletter_form" -%>
              </div>
            </div>
          </div>
        </li>
      </ol>
    </div>
  </div>
</div>

<%= render partial: "/shared/affiliates" -%>
