<%= content_for :title, raw(@page.title_override.blank? ? @page.title : @page.title_override) %>

<%= content_for :edit_link do %>
  <%= render :partial => '/shared/edit_bug', :locals => { :obj => @page, :edit_path => rails_admin.edit_path(model_name: 'page', id: @page.id) }%>
<% end %>

<%= content_for :featured do %>
<div class="wrap slider-wrap">
  <div class="feature-slider">
    <div class="feature intro-slide">      
      <div class="feature-image"><img src="<%= image_url('RTG_Feature.jpg') %>" alt="Reason To Give"></div>
      <div class="feature-content-wrap">
        <div class="feature-content">
          <h2>Welcome to Reason to Give</h2>
          <div class="description"><p>Giving should be simplified. Donating should be quicker. Helping should be personalized.</p></div>
          <div><%= render partial: "/shared/donation_form" -%></div>
        </div>
      </div>
    </div>
    <%= render @reasons %>
    <a data-scroll href="#content" class="scroll-down"><svg class="icon icon-arrow" role="img"><use xlink:href="#icon-arrow"></use></svg></a>
  </div>
</div>
<% end %>

<div class="blocks intro">
  <div class="block -left -gray">
    <div class="block-content">
      <h3>What We Do</h3>
      <p><strong>Reason to Give</strong> empowers individuals to transform their lives and set their own paths to success. By providing education, guidance, and material necessities, we can break the cycle of poverty in our communities. We give motivated people the tools they need to achieve their goals both in their home and professional lives.</p>
      <a href="about-us" class="btn -pink -hollow">More Information</a>
    </div>
  </div>
  <div class="block -right -column -pink support-us">
    <div class="block-content -top-half -center">
      <p><strong>Why not support what we do<br> by giving whatever you can:</strong></p>
      <%= render partial: "/shared/donation_form" -%>
    </div>
    <div class="block-content -bottom-half -image-cover -center">
    </div>
  </div>
</div>

