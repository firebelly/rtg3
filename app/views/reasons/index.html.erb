<%= content_for :title, raw(@page.title_override || @page.title) %>

<% unless @promoted_reason.blank? %>
  <%= content_for :featured do %>
    <div class="wrap slider-wrap">
      <div class="feature-slider">
        <%= render partial: "reason", locals: { reason: @promoted_reason[0] } -%>
        <a data-scroll href="#content" class="scroll-down"><svg class="icon icon-arrow" role="img"><use xlink:href="#icon-arrow"></use></svg></a>
      </div>
    </div>
  <% end %>
<% end %>

<div class="blocks reason-blocks">
  <%= render partial: "reasons/list", collection: @reasons, as: :reason %>
</div>
